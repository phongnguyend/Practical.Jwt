{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "OpenIdConnect": {
    "Authority": "https://<tenent_name>.ciamlogin.com/<tenant_id>/v2.0",
    "ClientId": "ClientId",
    "ClientSecret": "ClientSecret",
    "RequireHttpsMetadata": "true",
    "CallbackPath": "/api/signin-oidc",
    "RedirectUri": "https://calm-river-0801f7d00.2.azurestaticapps.net/signin-oidc",
    "PostLogoutRedirectUri": "https://calm-river-0801f7d00.2.azurestaticapps.net/"
  },
  "ReverseProxy": {
    "Routes": {
      "route1": {
        "ClusterId": "cluster1",
        "Match": {
          "Path": "/api/data/{**remainder}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/{**remainder}"
          }
        ]
      }
    },
    "Clusters": {
      "cluster1": {
        "Destinations": {
          "destination1": {
            "Address": "https://xxx-xxx-api.azurewebsites.net"
          }
        }
      }
    }
  }
}
