{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "OpenIdConnect": {
    "Authority": "https://<tenent_name>.ciamlogin.com/<tenant_id>/v2.0",
    "ClientId": "ClientId",
    "ClientSecret": "ClientSecret",
    "RequireHttpsMetadata": "true",
    "CallbackPath": "/api/signin-oidc",
    //"RedirectUri": "http://localhost:5015/api/signin-oidc",
    //"PostLogoutRedirectUri": "http://localhost:5015/"
    "RedirectUri": "http://localhost:3000/signin-oidc",
    "PostLogoutRedirectUri": "http://localhost:3000/"
  },
  "ReverseProxy": {
    "Routes": {
      "route1": {
        "ClusterId": "cluster1",
        "Match": {
          "Path": "/api/data/{**remainder}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/{**remainder}"
          }
        ]
      }
    },
    "Clusters": {
      "cluster1": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:7098"
          }
        }
      }
    }
  }
}
